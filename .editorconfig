# https://editorconfig.org/

root = true

[*]
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf
charset = utf-8

[*.md]
indent_size = 4
max_line_length = off
trim_trailing_whitespace = false

[*.py]
max_line_length = 119

[Makefile]
indent_size = 2
indent_style = tab

[*.yml]
indent_size = 2
